<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HomeCompass" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/olive_teal</item>

        <item name="fontFamily">@font/inter_medium</item>

        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.FloatingActionButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Adjust the percentage to make it more or less circular -->
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/olive_teal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <!--        <item name="android:textSize">48dp</item>-->
        <!-- Add other attributes as needed -->
    </style>
    <style name="CustomButtonStyle.Orange">
        <item name="android:backgroundTint">@color/medium_orange</item>
    </style>

    <style name="Theme.HomeCompass" parent="Base.Theme.HomeCompass" />

    <style name="Theme.HomeCompass.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">30dp</item>
    </style>
</resources>